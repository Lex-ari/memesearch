<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/loginFragment">
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.memesearch.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_loginFragment_to_registrationFragment"
            app:destination="@id/registrationFragment" />
        <action
            android:id="@+id/action_loginFragment_to_gallaryFragment"
            app:destination="@id/gallaryFragment" />
    </fragment>
    <fragment
        android:id="@+id/detailedMemeFragment"
        android:name="com.example.memesearch.DetailedMemeFragment"
        android:label="fragment_detailed_meme"
        tools:layout="@layout/fragment_detailed_meme" >
        <action
            android:id="@+id/action_detailedMemeFragment_to_gallaryFragment"
            app:destination="@id/gallaryFragment" />
    </fragment>
    <fragment
        android:id="@+id/gallaryFragment"
        android:name="com.example.memesearch.GallaryFragment"
        android:label="fragment_gallary"
        tools:layout="@layout/fragment_gallary" >
        <action
            android:id="@+id/action_gallaryFragment_to_detailedMemeFragment"
            app:destination="@id/detailedMemeFragment" />
        <action
            android:id="@+id/action_gallaryFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>
    <fragment
        android:id="@+id/registrationFragment"
        android:name="com.example.memesearch.RegistrationFragment"
        android:label="fragment_registration"
        tools:layout="@layout/fragment_registration" >
        <action
            android:id="@+id/action_registrationFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>
</navigation>